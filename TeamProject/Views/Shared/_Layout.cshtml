<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MySocial</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet" media="all">
    <meta name="description" content="The description of my page" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("MySocial", "Index", "Home", new { area = "" }, new { @class = "navbar-brand home-bar-style" })
            </div>
            <div class="navbar-collapse collapse">

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    @if (Request.IsAuthenticated && User.Identity.Name != null)
    {

        <div class="navbar-nav side-bar-nav">
            <ul class="nav nav-pills nav-stacked">
                <li>
                    <div class="btn-group">
                        <button class="btn btn-link dropdown-toggle hvr-icon-wobble-horizontal" data-toggle="dropdown" href="#" style="font-size:130%;">
                            Posts
                        </button>

                        <ul class="dropdown-menu rightMenu">
                            <li>
                                <div class="btn-group">
                                    <button class="btn btn-link" type="button" id="addressSearch"
                                            onclick="location.href='@Url.Action("Create", "Post")'">
                                        <h5 class="h5-dropdownmenu">Create Post</h5>
                                    </button>
                                    <button class="btn btn-link" type="button" id="addressSearch"
                                            onclick="location.href='@Url.Action("Index", "Posts")'">
                                        <h5 class="h5-dropdownmenu">View Posts</h5>
                                    </button>

                                </div>
                            </li>
                        </ul>
                    </div>
                </li>
                <li>
                    @Html.ActionLink("Users", "Index", "Users", new object { }, new { @class = "btn-user hvr-bob" })
                </li>
            </ul>
        </div>
    }
<div class="container body-content">
    
    @RenderBody()
    <hr/>
    <footer>
        <p>&copy; @DateTime.Now.Year - TeamInside</p>
    </footer>
</div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
