<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MySocial</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <meta name="description" content="The description of my page" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("MySocial", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <div class="dropdown">
                            <button class="dropbtn">Posts</button>
                            <ul class="dropdown-content">
                                <li>@Html.ActionLink("Creating Posts", "Index", "Posts")</li>
                                <li>@Html.ActionLink("Show Posts", "Index", "Posts")</li>
                            </ul>
                        </div>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    @if (Request.IsAuthenticated && User.Identity.Name != null)
    {

        <div class="navbar-nav side-bar-nav">
            <ul class="nav nav-pills nav-stacked">
				<li>
					<div class="btn-group">
						<button class="btn btn-link dropdown-toggle" data-toggle="dropdown" href="#" style="font-size:130%;">
							Posts 
						</button>

						<ul class="dropdown-menu rightMenu">
							<li>
								<div class="btn-group">
									<a href="#.html" style="text-align:center;" class="btn btn-link operationsButtons">
										<h5>Create Post</h5>
									</a>
									<a href="#.html" style="text-align:center;" class="btn btn-link operationsButtons">
										<h5>View Posts</h5>
									</a>

								</div>
							</li>
						</ul>
					</div>
				</li>
                <li>@Html.ActionLink("Posts", "Index", "Post", new { area = "" }, new { @class = "navbar-brand" })</li>
                <li>@Html.ActionLink("Search", "Index", "Users", new { area = "" }, new { @class = "navbar-brand" })</li>

            </ul>
        </div>
    }

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - TeamInside</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
