@{
    ViewBag.Titele = "Index";
}
@model TeamProject.Models.PostsViewModel
<style>
    div {
        color: black;
    }

    .row {
        margin: 10px;
        font-size: 18px;
    }

    footer {
        text-align: center;
        font-size: 16px;
    }

    .posted {
        font-size: 16px;
    }

    .title {
        font-weight: bold;
    }

    hr {
        display: block;
        height: 1px;
        border-top: 1px solid #000000;
        margin: 1em 0;
        padding: 0;
    }

    .body-content-post {
        word-wrap: break-word;
    }
</style>
<div class="container">
    <div class="col-md-6 col-xs-12">
        @foreach (var post in Model.Posts)
        {
            <div class="panel panel-default">
                <div class="panel-body">
                    <section class="post-heading">
                        <div class="row">
                            <div class="col-md-10">
                                <div class="media">
                                    <div class="media-left">
                                        @{
                                            var imagePostUrl = Url.Content("~/Content/images/profile/") + post.Username + ".png" + "?time=" + DateTime.Now;

                                            <img class="media-object photo-profile" src="@imagePostUrl" width="40" height="40" onerror="this.src = '../Content/images/profile/default.png';" />
                                        }

                                    </div>
                                    <div class="media-body">
                                        <a href="#" class="anchor-username"><h4 class="media-heading">@post.Author</h4></a>
                                        <span class="anchor-time">@post.PostDate</span>
                                        <span class="anchor-title"><h3 class="media-title">@post.Title</h3></span>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-2" id="post-details-@post.Id">
                                @Ajax.ActionLink(" ", "PostById", "Home",
                               new { id = post.Id },
                               new AjaxOptions
                               {
                                   InsertionMode = InsertionMode.Replace,
                                   UpdateTargetId = "post-details-" + post.Id
                               }, new { @class = "glyphicon glyphicon-chevron-down" })

                                @* <a href='@Url.Action("PostById","Home", new {id = post.Id})'><i class="glyphicon glyphicon-chevron-down"></i></a>*@
                            </div>
                        </div>
                    </section>

                    <section class="post-body">
                        <div class="body-content-post">
                            @post.Body
                        </div>

                    </section>
                    <section class="post-footer post-footer-@post.Id">
                        <hr />
                        <div class="post-footer-option container">
                            <ul class="list-inline">

                                <li class="post-like-@post.Id">
                                    @using (Ajax.BeginForm("AddLike", "Home", new { id = post.Id }, new AjaxOptions
                                    {
                                        InsertionMode = InsertionMode.Replace,
                                        UpdateTargetId = "post-like-" + post.Id,

                                        OnSuccess = "likeSuccessHandler(data)",
                                    }, new { @class = "" }))
                                    {
                                        <button type="submit" name="command" class="glyphicon glyphicon-thumbs-up" value="Like"><span id="post-likes-@post.Id">@post.PostLikes</span></button>
                                        <span id="post-@post.Id">@post.LikesCount</span>
                                        <button type="submit" name="command" class="glyphicon glyphicon-thumbs-down" value="Dislike"><span id="post-dislikes-@post.Id">@post.PostDislikes</span></button>
                                    }
                                </li>
                                <li class="new-comment">
                                    @*<a href="#"><i class="glyphicon glyphicon-comment"></i> Comment</a>*@

                                </li>
                                <li><a href="#"><i class="glyphicon glyphicon-share-alt"></i> Share</a></li>
                            </ul>
                        </div>
                        <section>
                            <div class="post-footer-comment-wrapper">
                                <ul></ul>
                                @foreach (var comment in post.Comments)
                                {
                                    <div class="comment-form">
                                        @comment.Text
                                        <br />


                                    </div>

                                    <ul class="list-inline">

                                        <li class="comment-like-@comment.CommentId">
                                            @using (Ajax.BeginForm("CommentLike", "Home", new { id = comment.CommentId }, new AjaxOptions
                                            {
                                                InsertionMode = InsertionMode.Replace,
                                                UpdateTargetId = "comment-like-" + comment.CommentId,
                                                OnSuccess = "commentLikeSuccessHandler(data)",
                                            }, new { @class = "" }))
                                            {
                                                <button type="submit" name="command" class="glyphicon glyphicon-thumbs-up" value="Like"><span id="comment-likes-@comment.CommentId">@comment.CommentLikes</span></button>
                                                <span id="comment-@comment.CommentId">@comment.CommentCountLikes</span>
                                                <button type="submit" name="command" class="glyphicon glyphicon-thumbs-down" value="Dislike"><span id="comment-dislikes-@comment.CommentId">@comment.CommentDislikes</span></button>
                                            }
                                        </li>
                                    </ul>
                                    <div class="comment">
                                        <div class="media">
                                            <div class="media-left">
                                                @{
                                                    var imageUrl = Url.Content("~/Content/images/profile/") + comment.Username + ".png" + "?time=" + DateTime.Now;
                                                    <a href="#">
                                                        <img class="media-object photo-profile" src="@imageUrl" width="32" height="32" onerror="this.src = '../Content/images/profile/default.png';" />
                                                    </a>
                                                }
                                            </div>
                                            <div class="media-right">

                                            </div>
                                            <div class="media-body">
                                                <a href="#" class="anchor-username"><h4 class="media-heading">@comment.Author</h4></a>
                                                <a href="#" class="anchor-time">@comment.CommentPostDate</a>

                                            </div>
                                        </div>
                                    </div>
                                    <hr />
                                                    }
                            </div>
                        </section>
                    </section>
                </div>
            </div>
                                                    }
    </div>
</div>

@section scripts {
    @Scripts.Render("~/bundles/ajax")
    @Scripts.Render("~/Scripts/Handlers/likeSuccessHandler.js")

}
